function figure1=flower1(h,radius)
axes1 = axes('Parent',h);
center = [0 0];                       
N=size(radius,2)-1;
r = max(radius(:));
r = r + r*0.2;                          
theta = linspace(5*pi/2, pi/2, N+1);
x = bsxfun(@times, radius, cos(theta)+center(1))';
y = bsxfun(@times, radius, sin(theta)+center(2))';
plot(x(:,1), y(:,1),'DisplayName','m','MarkerSize',2,'Marker','.','LineWidth',1);
set(axes1,'DataAspectRatio',[1 1 1],'PlotBoxAspectRatio',[1 1 1.08929892089437]);
axis off
end